<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaMiaPizzeria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaMiaPizzeria.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar" style="background-color: #E64848">
            <div class="container-fluid">
                <a class="navbar-brand mx-5" href="#">
                    <img src="./Assets/png/logo-no-background.png" alt="Logo" height="48" class="d-inline-block align-text-top">
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="navbar" style="background-color: #E64848">
            <div class="container-fluid">
                <p class="navbar-brand mb-0 text-white">Pizzeria: Higuain Lota</p>
                <p class="navbar-brand mb-0 text-white">All rights reserved</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
